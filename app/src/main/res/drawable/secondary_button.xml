<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Onclick state  -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/spring_green"
                android:endColor="@color/dark_sea"
                android:angle="0" />
            <corners android:radius="38dp"/>
        </shape>
    </item>

    <!-- Default state  -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/dark_sea"
                android:endColor="@color/spring_green"
                android:angle="0" />
            <corners android:radius="38dp"/>
        </shape>
    </item>
</selector>